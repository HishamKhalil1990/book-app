      <form action="/searchs" method="POST">
        <input type="text" name="search" placeholder="Enter a Title or Author" required><br>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="radio" name="search" value="author" required>
          </label>
        </fieldset>
        <button type="submit" value="submit">Search the Google Books API</button>
      </form>
    </main>
