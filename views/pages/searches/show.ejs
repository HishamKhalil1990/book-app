<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/styles/ reset.css">
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/modules.css">
    <script src="https://kit.fontawesome.com/3d30a49dec.js" crossorigin="anonymous"></script>
    <title>Results</title>
</head>

<body>
    <header>
        <h1>Best Books!</h1>
        <a href="#"><i class="fas fa-bars"></i></a>
    </header>
    <div class="firstDiv">
        <h2>
          Search Results
        </h2>
    </div>
    <div id='container'>
        <% dataArr.forEach( bookInfo => { %>
        <div class="card">
            <img src='<%= bookInfo.image%>'' alt="">
            <h2 class="titleC">Title: <%= bookInfo.title %></h2>
            <p style="text-align: center;" class="author">Author: <%= bookInfo.author %></p>
            <form class="bookForm" action="/books" method="POST">
                <input class="inp" type="hidden" name="image" value="<%= bookInfo.image%>">
                <input class="inp" type="hidden" name="title" value="<%= bookInfo.title %>">
                <input class="inp" type="hidden" name="author" value="<%= bookInfo.author %>">
                <input class="inp" type="hidden" name="description" value="<%= bookInfo.description %>">
                <input class="inp" type="hidden" name="isbn" value="<%= bookInfo.isbn %>">
                <input class="inp" type="hidden" name="bookshelf" value="<%= bookInfo.bookshelf %>">
                <button class="inp">Select This Book</button>
            </form>
        </div>
        <% }) %>
    </div>
</body>

</html>